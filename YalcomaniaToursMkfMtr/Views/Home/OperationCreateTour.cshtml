@model OperationCreateTourModel
@{
    ViewData["Title"] = "Operasyon Tur Düzenleme";
}

<div id="addtourdiv">
    <div>
        <p>Tarih</p>
        <input type="date" id="Tarih" name="Tarih" placeholder="Tarih" />
    </div>
