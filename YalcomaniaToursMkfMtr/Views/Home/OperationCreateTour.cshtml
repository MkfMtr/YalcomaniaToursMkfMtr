            {
                var aracTipi = Model.AracTipiList.FirstOrDefault(a => a.Id == arac.AracTipiId);
                <option value="@arac.Id">@($"{aracTipi.AracTipiAdi}, {arac.PlakaVeyaIsim}")</option>
