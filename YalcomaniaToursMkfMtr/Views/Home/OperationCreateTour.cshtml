            {
                <option value="@tur.Id">@tur.TurTipiAdi</option>
            }
        </select>
    </div>
    <div>
        <p>Fiyat</p>
        <input type="number" id="Fiyat" name="Fiyat" placeholder="Fiyat" step="0.01" pattern="\d{1,16}(\.\d{2})?" />
    </div>
    
    <div>
        <p>Arac 1</p>
        <select id="AracId1" name="AracId1">
            <option value="">Seçenek seçin</option>
