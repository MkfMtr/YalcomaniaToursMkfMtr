    <div>
        <input type="checkbox" id="showRentBus" name="showRentBus" onchange="toggleRentBus()" />
        <label for="showRentBus">Rent Bus</label>
    </div>
    
    <div id="rentbus" style="display: none;">
        <div>
            <p>Sirket</p>
            <select id="Sirket" name="Sirket">
                <option value="">Seçenek seçin</option>
                @foreach (var sirket in Model.SirketList.Where(s => !Model.SirketTurTipiList.Any(st => st.SirketId == s.Id)))
                {
                    <option value="@sirket.Id">@sirket.SirketAdi</option>
                }
            </select>
        </div>
        <div>
            <p>AracSayisi</p>
            <input type="number" id="AracSayisi" name="AracSayisi" placeholder="AracSayisi" />
        </div>
        <div>
            <p>VerecekParaBirimi</p>
            <select id="VerecekParaBirimi" name="VerecekParaBirimi">
                <option value="">Seçenek seçin</option>
                @foreach (var paraBirimi in Model.ParaBirimiList)
                {
                    <option value="@paraBirimi.Iso4217">@paraBirimi.Iso4217</option>
                }
            </select>
        </div>
        <div>
            <p>ToplamVerecek</p>
            <input type="number" id="ToplamVerecek" name="ToplamVerecek" placeholder="ToplamVerecek" step="0.01" pattern="\d{1,16}(\.\d{2})?" />
        </div>
        <div>
            <p>OdenenVerecek</p>
            <input type="number" id="OdenenVerecek" name="OdenenVerecek" placeholder="OdenenVerecek" step="0.01" pattern="\d{1,16}(\.\d{2})?" />
        </div>
        <div>
            <p>OdendiMi</p>
            <input type="checkbox" id="OdendiMi" name="OdendiMi" />
        </div>
    </div>

    <button type="button" onclick="createTour()">Tur Oluştur</button>
</div>

