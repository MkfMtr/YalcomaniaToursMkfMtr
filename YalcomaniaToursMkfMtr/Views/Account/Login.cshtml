@model YalcomaniaToursMkfMtr.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Kullanıcı Giriş</h2>

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="UserMail" class="control-label"></label>
        <input asp-for="UserMail" class="form-control" />
        <span asp-validation-for="UserMail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Giriş</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}